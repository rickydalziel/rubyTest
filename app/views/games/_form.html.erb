<% if @game.errors.any? %>

<h3>Errors have prevented this game from being saved:</h3> <br>
    
    <% @game.errors.full_messages.each do |msg| %>
        <%= msg %> <br>
    <% end %>

<% end %>

<%= form_for([@game]) do |f| %>
<p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>

</p>

<p>
    <%= f.submit %>
</p>

<% end %>